% Redefine the formats for sectioning headers

\renewcommand{\section}{\setcounter{equation}{0}%
%  \setcounter{figure}{0}%
%  \setcounter{table}{0}%
  \@startsection {section}{1}{\z@}%
  {-6.0ex \@plus -1ex \@minus -.2ex}%
  {2.3ex \@plus.2ex}%
  {\reset@font\large\bfseries}}
\renewcommand{\subsection}{\@startsection{subsection}{2}{\z@}%
  {-4.5ex\@plus -1ex \@minus -.2ex}%
  {1.5ex \@plus .2ex}%
  {\reset@font\normalsize\bfseries}}
\renewcommand{\subsubsection}{\@startsection{subsubsection}{3}{\z@}%
  {-4.0ex\@plus -1ex \@minus -.2ex}%
  {1.5ex \@plus .2ex}%
  {\reset@font\normalsize\itshape}}
\renewcommand{\paragraph}{\@startsection{paragraph}{4}{\z@}%
  {-4.0ex\@plus -1ex \@minus -.2ex}%
  {1.5ex \@plus .2ex}%
  {\reset@font\normalsize\itshape}}

\renewcommand\appendix{\par%
  \renewcommand{\section}{\setcounter{equation}{0}%
    \@startsection {section}{1}{\z@}%
    {-6.0ex \@plus -1ex \@minus -.2ex}%
    {2.3ex \@plus.2ex}%
    {\reset@font\large\bfseries\noindent\appendixname\space}}%
%  \setcounter{section}{0}%
%  \setcounter{subsection}{0}%
  \gdef\thesection{\@Alph\c@section}
  \addcontentsline{toc}{section}{APPENDICES}}
\newcommand{\appendixend}{
  \renewcommand{\section}{\setcounter{equation}{0}%
    \setcounter{figure}{0}%
    \setcounter{table}{0}%
    \@startsection {section}{1}{\z@}%
    {-6.0ex \@plus -1ex \@minus -.2ex}%
    {2.3ex \@plus.2ex}%
    {\reset@font\large\bfseries}}}


